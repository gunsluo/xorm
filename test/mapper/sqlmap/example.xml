<?xml version='1.0' encoding='UTF-8' ?>
<mapper namespace='test'>

	<!-- user_demo 所有查询列 -->
	<sql id='QUERY_COLUMN_LIST'>
		<![CDATA[*]]>
	</sql>

	<!-- user_demo 查询列来源表-->
	<sql id='QUERY_FROM_TABLE'><![CDATA[FROM t_apply_detail tad LEFT JOIN t_apply_object tao on tad.apply_object_id = tao.apply_object_id]]></sql>
	
	<!-- 全部条件(更多功能可以通过queryData扩展实现)  -->
	<sql id='QUERY_WHERE_CLAUSE'>
		<set>
		    <![CDATA[where 1=1]]>
            <if test='{{if ne .UserId 0}}'><![CDATA[AND user_id={{.UserId}}]]></if>
            <if test='{{if ne .ApplyStatus ""}}'><![CDATA[AND apply_status='{{.ApplyStatus}}']]></if>
		</set>
	</sql>

	<!-- 查询,通过条件 -->
	<select id='selectEntryList'>
		<![CDATA[SELECT]]>
		<include refid='QUERY_COLUMN_LIST'/>
		<include refid='QUERY_FROM_TABLE'/>
		<include refid='QUERY_WHERE_CLAUSE'/>
	</select>

    <select id='selectEntryAll'>
		<![CDATA[select * from t_apply_detail tad LEFT JOIN t_apply_object tao on tad.apply_object_id = tao.apply_object_id]]>
	</select>

	<!-- 其它SQL语句 -->
</mapper>
